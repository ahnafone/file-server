<!DOCTYPE html>

<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>File Server</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="stylesheet" href="/src/styles.css">

        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
    </head>



    <body>
        <div class="outer">
            <% if(prevDir.length != 0) { %>
                <div class="sidebar">
                    <div class="inner">
                        <div class="dir-links"> <a href="/home<%= prevPath %>"> <%= prevDir[0] %> </a> </div>
                        <% for(let i=1; i<prevDir.length; i++) { %>
                            <div class="dir-links">
                                âž¥ &nbsp; <a href="/home<%= prevPath + "/" + prevDir[i] %>"> <%= prevDir[i] %> </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            <% } %>

            <div class="main">
                <div class="inner">
                    <div class="main-col">
                        <% for(let d of dirs) { %>
                            <div class="folder">
                                <a href="/home<%= path + d %>">
                                    <img src="/src/folder.jpg">
                                    <%= d %>
                                </a>
                            </div>
                        <% } %>

                        <% for(let i=0; i<files.length; i++) { %>
                            <div class="file-link">
                                <a href="/data<%= path + encodedFiles[i] %>" target="_blank"> <%= files[i] %> </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

    </body>
</html>